{
  "name": "istex-collection",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf ./dist",
    "clean:osx": "sudo rm -rf ./dist/osx",
    "clean:win": "sudo rm -rf ./dist/win",
    "clean:linux": "sudo rm -rf ./dist/linux",
    "pack": "npm run clean && npm run pack:osx && npm run pack:win && npm run pack:linux && npm run pack:mas",
    "pack:osx": "npm run clean:osx && electron-packager app \"IstexCollection\" --out=dist/osx --platform=darwin --arch=x64 --version=1.3.3 --icon=assets/osx/logo.icns --ignore=dist --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:win": "npm run clean:win && electron-packager app \"IstexCollection\" --out=dist/win --platform=win32 --arch=ia32,x64 --version=1.3.3 --icon=assets/win/logo.ico --ignore=dist --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "pack:linux": "npm run clean:linux && electron-packager app \"IstexCollection\" --out=dist/linux --platform=linux --arch=ia32,x64 --version=1.3.3 --icon=assets/win/logo.ico --ignore=dist --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
    "build-css": "node-sass app/assets/sass/base.scss app/assets/css/style.css",
    "checkSass": "nodemon -e scss -x \"npm run build-css\"",
    "start": "electron app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "Q": "0.0.1",
    "asar": "^0.12.1",
    "electron-packager": "7.7.0",
    "electron-prebuilt": "^1.3.2",
    "fs-jetpack": "^0.9.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "rcedit": "^0.5.1"
  },
  "dependencies": {
    "electron": "^1.3.3",
    "electron-packager": "^7.7.0"
  }
}
